<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/argumentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_margin="@dimen/surround_margins"
    android:background="@drawable/square_white"
    android:orientation="vertical"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:fontFamily="@font/baloo"
            android:textSize="@dimen/very_small_text"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/play_icon"/>
        <ImageView
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pause_icon"
            android:visibility="gone"/>
        <SeekBar
            android:id="@+id/evolutionBar"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audioDuration"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:layout_gravity="start"
            android:lineSpacingExtra="@dimen/text_spacing"
            android:gravity="start"
            android:textSize="@dimen/very_small_text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="@dimen/very_small_text"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>