<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/surround_paddings"
    android:layout_margin="@dimen/surround_margins"
    tools:context="com.relyon.whib.MainActivity"
    android:background="@color/lightGrey"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="profile">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/profile_icon"
                android:layout_gravity="end"
                android:onClick="profile"
                android:text="@string/profile"
                android:layout_weight="1"
                android:contentDescription="@string/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_spacing"
                android:text="@string/profile"
                android:gravity="center"
                android:textSize="@dimen/small_text"
                android:onClick="profile" />
        </LinearLayout>

        <TextView
            android:id="@+id/mainServer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/servers"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:layout_weight="9"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="logout">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/exit_icon"
                android:layout_gravity="end"
                android:onClick="logout"
                android:text="@string/logout"
                android:layout_weight="1"
                android:contentDescription="@string/exit_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_spacing"
                android:text="@string/sair"
                android:gravity="center"
                android:textSize="@dimen/small_text"
                android:onClick="logout" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:id="@+id/secondaryServersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewSec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/choseSubjectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_accent_square"
            android:text="@string/chose_next_subject"
            android:textSize="@dimen/normal_text"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/surround_margins"
            android:paddingHorizontal="15dp"
            android:elevation="@dimen/elevation1" />
    </LinearLayout>

</LinearLayout>