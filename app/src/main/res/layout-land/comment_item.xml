<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"
    android:elevation="@dimen/elevation1"
    android:layout_margin="1dp"
    android:background="@drawable/rounded_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/photo"
                android:layout_height="@dimen/photo"
                android:background="@drawable/all_circle_white_bg"
                android:layout_marginLeft="@dimen/surround_margins"
                android:layout_marginRight="@dimen/negative"/>

            <TextView
                android:id="@+id/userName"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:fontFamily="@font/baloo"
            android:text=""
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/black"
            android:lineSpacingExtra="@dimen/negative"
            android:padding="@dimen/surround_paddings"
            android:layout_margin="@dimen/surround_margins"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.25"
            android:rating="0.0"
            android:elevation="@dimen/elevation1"
            android:progressTint="@color/colorAccent"
            android:progressBackgroundTint="@color/black"
            android:secondaryProgressTint="@color/colorPrimary"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="false"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/ratingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:fontFamily="@font/baloo"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/big_text"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</LinearLayout>